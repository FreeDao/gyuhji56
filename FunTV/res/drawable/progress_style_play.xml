<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="13.5dp" />

            <solid android:color="@color/player_seek_bar_bg" />

            <stroke
                android:width="0.5dp"
                android:color="@color/episode_definition_title" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="13.5dp" />

                <solid android:color="@color/player_seek_bar_second_progress_bg" />

                <stroke
                    android:width="0.5dp"
                    android:color="@color/transparent" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="13.5dp" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/player_seek_bar_progress_end"
                    android:startColor="@color/player_seek_bar_progress_start" />

                <stroke
                    android:width="0.5dp"
                    android:color="@color/transparent" />
            </shape>
        </clip>
    </item>

</layer-list>