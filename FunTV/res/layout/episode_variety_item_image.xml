<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/variety_item_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/variety_image"
            android:layout_width="186dp"
            android:layout_height="104dp"
            android:scaleType="centerCrop"
            android:src="@color/episode_definition_title" />

        <TextView
            android:id="@+id/variety_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/variety_image"
            android:layout_alignRight="@id/variety_image"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/episode_bg"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/episode_definition_word"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/variety_item_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/variety_item_rv"
        android:layout_alignRight="@id/variety_item_rv"
        android:layout_below="@id/variety_item_rv"
        android:background="@color/variety_item_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/variety_name"
            style="@style/episode_text_style"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/variety_item_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/variety_item_lv"
        android:layout_alignLeft="@id/variety_item_rv"
        android:layout_alignRight="@id/variety_item_rv"
        android:layout_alignTop="@id/variety_item_rv"
        android:background="@drawable/player_related_bg_selector" />

</RelativeLayout>