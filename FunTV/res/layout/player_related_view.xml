<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/player_related_view_tv"
        style="@style/player_loading_text_style"
        android:layout_marginBottom="@dimen/dimen_12px"
        android:layout_marginLeft="@dimen/dimen_248px"
        android:text="@string/player_related_tip"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pause_panel_layou_vp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_222px"
        android:layout_marginRight="@dimen/dimen_222px" />

</LinearLayout>