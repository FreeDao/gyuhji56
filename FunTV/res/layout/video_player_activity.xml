<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="horizontal" >

    <com.funshion.player.utils.FunshionViewFlipper
		android:id="@+id/playerflipper"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/video_player_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/control_panel_top_gradual_bg"
        android:visibility="gone" >

        <TextView
            android:id="@+id/video_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_126px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/episode_definition_word"
            android:textSize="@dimen/dimen_font_42px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/video_player_logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/video_player_loading_bg"
        android:textColor="#797979"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/video_player_controller_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_player_controller_pannel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_player_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/video_player_loading_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_player_exit_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_net_error_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/episode_indicator"
        style="@style/episode_indicator_style"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/video_player_cache_buffer_iv"
        android:layout_width="@dimen/dimen_204px"
        android:layout_height="@dimen/dimen_204px"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_loading_buffer"
        android:scaleType="center"
        android:visibility="gone" />

</RelativeLayout>